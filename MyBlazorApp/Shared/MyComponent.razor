@($"Today is {DateTime.Now:dddd} the {DateTime.Now:dd}{GetDaySuffix(DateTime.Now)} of {DateTime.Now:MMMM}")

@code {
    private string GetDaySuffix(DateTime date)
    {
        switch (date.Day)
        {
            case 1:
            case 21:
            case 31:
                return "st";
            case 2:
            case 22:
                return "nd";
            case 3:
            case 23:
                return "rd";
            default:
                return "th";
        }
    }
}